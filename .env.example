# Razorpay Configuration (Required for subscription payments)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Razorpay Plan IDs (Create these in your Razorpay dashboard)
RAZORPAY_PLAN_STARTER=plan_starter_plan_id
RAZORPAY_PLAN_GROWTH=plan_growth_plan_id
RAZORPAY_PLAN_PRO=plan_pro_plan_id